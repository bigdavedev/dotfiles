general {
    colors = true
    color_good = "#a3be8c"
    color_degraded = "#bfc271"
    color_bad = "#bf616a"
    interval = 5
}

order += "disk /"
order += "wireless wlp2s0"
order += "ethernet enp0s3"
order += "battery 0"
order += "load"
order += "tztime local"

wireless wlp2s0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
    format_down = "W: down"
}

ethernet enp0s3 {
    format_up = "ETH: %ip"
    format_down = "ETH: down"
}

battery 0 {
    format = "%status %percentage %remaining"
    format_down = "No battery"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}

load {
	format = "%5min"
}

disk "/" {
	format = "%avail"
}
