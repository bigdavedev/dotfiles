[general]
accounts = arccore,consat
pythonfile = ~/.config/offlineimap/pass.py

[mbnames]
enabled = yes
filename = ~/.config/mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account arccore]
localrepository = arccore-local
remoterepository = arccore-remote

[Repository arccore-local]
type = Maildir
localfolders = ~/mail/arccore

[Repository arccore-remote]
type = IMAP
auth_mechanisms = GSSAPI, CRAM-MD5, PLAIN, LOGIN
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remotehost = outlook.office365.com
remoteport = 993
remoteuser = dabr@arccore.com
remotepasseval = get_password("arccore")
nametrans = lambda folder: {'INBOX': '',
   'Sent Items': 'Sent Items',
   'Drafts': 'Drafts'}.get(folder,folder)
folderfilter = lambda folder: folder in ['INBOX', 'Sent Items', 'Drafts']

[Account consat]
localrepository = consat-local
remoterepository = consat-remote

[Repository consat-local]
type = Maildir
localfolders = ~/mail/consat

[Repository consat-remote]
type = IMAP
auth_mechanisms = GSSAPI, CRAM-MD5, PLAIN, LOGIN
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remotehost = outlook.office365.com
remoteport = 993
remoteuser = david.brown@consat.se
remotepasseval = get_password("consat")
nametrans = lambda folder: {'INBOX': '',
   'Sent Items': 'Sent Items',
   'Drafts': 'Drafts'}.get(folder,folder)
folderfilter = lambda folder: folder in ['INBOX', 'Sent Items', 'Drafts']
